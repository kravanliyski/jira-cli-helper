{
  "name": "jira-cli-helper",
  "version": "1.0.0",
  "description": "Git-aware Jira CLI for fast ticket management",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "jira": "./dist/index.js"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsup",
    "prepare": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "fix": "npm run format && npm run lint -- --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "author": "Your Personal Name <your-personal-email@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kravanliyski/jira-cli-helper.git"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "dotenv": "^16.0.0",
    "inquirer": "^9.0.0",
    "jira.js": "^5.2.2",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
